<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/vScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.TransactionFragment"
    android:background="@color/pf_primary">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Contoh konten -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lakukan Pengajuan"
            android:textSize="25sp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/poppins_bold"
            />

        <!-- Tambahkan konten lainnya di sini -->
        <LinearLayout
            android:id="@+id/linearLayout_Card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/card_default"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_jumlahPlafon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="46dp"
                android:layout_marginTop="90dp"
                android:fontFamily="@font/poppins_semibold"
                android:text=""
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayoutinformasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/base_shape2"
            android:padding="15dp"
            android:layout_marginTop="-100dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_marginTop="80dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🏆 Informasi Plafon"
                android:textSize="22sp"
                android:textColor="@color/pf_text_primary"
                android:fontFamily="@font/poppins_bold"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_star" />

                <TextView
                    android:id="@+id/pb_perentase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="0%"
                    android:textSize="16sp"
                    android:textColor="@color/pf_accent"
                    android:fontFamily="@font/poppins_semibold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" EXP"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/pf_text_primary" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:progress="0"
                android:max="100"
                android:progressTint="@color/pf_accent"
                android:backgroundTint="#E0E0E0"
                android:layout_marginTop="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="💰 Sisa Plafon"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/pf_text_primary" />
                <TextView
                    android:id="@+id/tv_sisaPlafon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="IDR 0"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/pf_accent" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="✅ Pinjaman Lunas"
                    android:textSize="14sp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/pf_text_primary" />
                <TextView
                    android:id="@+id/tv_pinjamanlunas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="IDR 0"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@android:color/holo_green_dark" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📈 Pinjaman Saat Ini"
                    android:textSize="14sp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/pf_text_primary" />
                <TextView
                    android:id="@+id/tv_pinjamansekarang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="IDR 0"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@android:color/holo_orange_dark" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearPengajuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/base_shape2"
            android:padding="15dp"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Pengajuan"
                android:layout_marginBottom="15dp"
                android:textColor="@color/pf_text_primary"
                android:fontFamily="@font/poppins_bold"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="Amount"
                android:textColor="@color/pf_text_primary"
                android:textSize="12sp"></TextView>

            <com.example.pinjemfinandroid.Utils.RupiahEditText
                android:id="@+id/et_amount"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/reactangleinputext"
                android:inputType="number"
                android:padding="5dp"
                android:drawableLeft="@drawable/baseline_payment_24"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Tenor"
                android:textColor="@color/pf_text_primary"
                android:textSize="12sp">

            </TextView>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <EditText
                    android:id="@+id/et_tenor"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:paddingEnd="50dp"
                    android:inputType="number"
                    android:background="@drawable/reactangleinputext"
                    android:padding="5dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="#888888"
                    android:drawableLeft = "@drawable/baseline_calendar_month_24"
                    />

                <TextView
                    android:id="@+id/tv_suffix"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end|center_vertical"
                    android:text="/Bulan"
                    android:textColor="#888888"
                    android:paddingEnd="10dp"
                    android:gravity="center_vertical"/>
            </FrameLayout>

            <com.google.android.material.slider.Slider
                android:id="@+id/slider_tenor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="-5dp"
                android:stepSize="1"
                android:value="1"
                android:valueFrom="1"
                android:valueTo="12"
                app:thumbColor="@color/pf_primary"
                app:thumbRadius="7dp"
                app:trackHeight="4dp" />

            <Button
                android:id="@+id/btn_ajukan"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/shapebutton"
                android:fontFamily="@font/poppins_semibold"
                android:text="Ajukan"
                android:textColor="@color/white"
                android:textSize="12sp" />



        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_kalkulasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:layout_marginBottom="100dp"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/bg_receipt"
            android:elevation="4dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pengajuan Anda"
                android:textSize="14sp"
                android:textColor="@color/pf_text_primary"
                android:fontFamily="@font/poppins_bold"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="12dp"/>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama"
                android:textSize="12sp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/pf_text_secondary"/>
            <TextView
                android:id="@+id/tv_namaSimul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama User"
                android:textAlignment="textEnd"
                android:textSize="13sp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/pf_text_primary"
                android:paddingBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="12sp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/pf_text_secondary"/>
            <TextView
                android:id="@+id/tv_emailSimul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="email@example.com"
                android:textAlignment="textEnd"
                android:textSize="13sp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/pf_text_primary"
                android:paddingBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No. Rekening"
                android:textSize="12sp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/pf_text_secondary"/>
            <TextView
                android:id="@+id/tv_norek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No rekening belum di daftar"
                android:textAlignment="textEnd"
                android:textSize="13sp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/pf_text_primary"
                android:paddingBottom="8dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/pf_divider"
                android:layout_marginBottom="8dp"/>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pinjaman"
                android:textSize="12sp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/pf_text_secondary"/>
            <TextView
                android:id="@+id/tv_pinjaman"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rp 0"
                android:textAlignment="textEnd"
                android:textSize="13sp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/pf_text_primary"
                android:paddingBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Angsuran"
                android:textSize="12sp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/pf_text_secondary"/>
            <TextView
                android:id="@+id/tv_angsuran"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rp 0"
                android:textAlignment="textEnd"
                android:textSize="13sp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/pf_text_primary"
                android:paddingBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tenor"
                android:textSize="12sp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/pf_text_secondary"/>
            <TextView
                android:id="@+id/tv_tenor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12 Bulan"
                android:textAlignment="textEnd"
                android:textSize="13sp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/pf_text_primary"
                android:paddingBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Payment"
                android:textSize="12sp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/pf_text_secondary"
                android:paddingTop="8dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="12dp">
                <TextView
                    android:id="@+id/tv_totalPayment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Rp 0"
                    android:textSize="13sp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/pf_text_primary"
                    android:textAlignment="textStart"/>
                <TextView
                    android:id="@+id/tv_bunga"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0%"
                    android:textSize="13sp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/pf_text_primary"
                    android:textAlignment="textEnd"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>