<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Saat tombol ditekan -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#B2C1DA"/> <!-- Warna lebih gelap saat ditekan -->
            <corners android:radius="15dp"/>
            <stroke android:color="#F9FAFB" android:width="3dp"/>
        </shape>
    </item>

    <!-- Default (tidak ditekan) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Warna asli -->
            <corners android:radius="15dp"/>
            <stroke android:color="#F9FAFB" android:width="5dp"/>
        </shape>
    </item>
</selector>