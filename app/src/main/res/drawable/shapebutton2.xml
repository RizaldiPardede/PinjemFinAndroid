<!-- res/drawable/rounded_button.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Saat tombol ditekan -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/pf_second_accent"/> <!-- Warna lebih gelap saat ditekan -->
            <corners android:radius="15dp"/>
        </shape>
    </item>

    <!-- Default (tidak ditekan) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/pf_accent"/> <!-- Warna asli -->
            <corners android:radius="15dp"/>
        </shape>
    </item>
</selector>
